{
  "name": "nodejs-username",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "preserve": "yarn build",
    "serve": "tsc -w & nodemon -r dotenv/config dist/index.js",
    "dev": "nodemon"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "config": "^3.3.11",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mysql2": "^3.9.2",
    "prisma": "^5.10.2",
    "reflect-metadata": "^0.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.21",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.11.9",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "ext": "ts,json",
    "watch": [
      "./src/*"
    ],
    "exec": "ts-node -r dotenv/config -r tsconfig-paths/register ./src/index.ts",
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "ignore": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts",
      ".git",
      "node_modules"
    ]
  }
}
